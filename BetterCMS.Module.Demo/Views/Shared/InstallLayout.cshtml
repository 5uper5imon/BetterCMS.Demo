@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>@ViewBag.Title</title>
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>        
        <style type="text/css">
            html, body {
                margin: 0;
                width: 100%;
                height: 100%;
                font-family: 'Open Sans', sans-serif;
            }

            p {
                margin: 0;
                position: relative;
            }

            .bcms-page {
                min-height: 100%;
                margin: 0 0 -74px;
            }

            .bcms-header {
                background: #303030;
                height: 50px;
                line-height: 50px;
            }

            .bcms-header h1 {
                width: 560px;
                margin: 0 auto;
                color: #0383df;
                font-size: 20px;
                font-weight: 700;
            }

            .bcms-body {
                width: 560px;
                margin: 0 auto;
                padding: 20px 0 74px;
            }

            .bcms-footer {
                height: 74px;
                padding: 20px 20px 20px 60px;
                background-color: #303030;
                box-sizing: border-box;
                -moz-box-sizing: border-box;
            }

            .bcms-editor-field-box {
                height: 30px;
                width: 100%;
                line-height: 18px;
                padding: 6px;
                margin: 0;
                border: 1px solid #c6c6c6;
                font-family: 'Open Sans', sans-serif;
                font-size: 12px;
                color: #000;
                vertical-align: middle;
                background-color: #f5f5f5;
                border-radius: 0;
                box-sizing: border-box;
                -moz-box-sizing: border-box;
                -webkit-appearance: none;
                border-radius: 0;
            }

            .bcms-btn-small {
                position: relative;
                display: inline-block;
                height: 28px;
                line-height: 28px;
                padding: 0 10px;
                margin: 10px 0;
                border: 1px solid #24597e;
                border-radius: 2px;
                cursor: pointer;
                vertical-align: middle;
                color: #fff;
                font-family: 'Open Sans', sans-serif;
                font-size: 12px;
                overflow: hidden;
                text-transform: uppercase;
                background: #1890E6;
                background: linear-gradient(to bottom, #1890E6 0, #0D7BC9 100%);
                background: -moz-linear-gradient(top, #1890E6 0, #0D7BC9 100%);
                background: -webkit-linear-gradient(top, #1890E6 0, #0D7BC9 100%);
            }

            .bcms-title {
                display: block;
                position: relative;
                padding: 10px 0 5px;
                color: #000;
                line-height: 20px;
                font-size: 14px;
                font-weight: 700;
            }


            div.bcms-messages ul {
                padding: 15px 60px 14px;
                margin: 0;
                font-size: 12px;
                border-bottom: 1px solid #c6c6c6;
                border-top: 0;
            }

            ul.bcms-success-messages {
                background-color: #e8fae5;
            }

                ul.bcms-success-messages li {
                    line-height: 25px;
                    list-style-position: inside;
                    list-style-image: url('data:image/png;base64,');
                    color: #20cd00;
                }

            ul.bcms-error-messages {
                background-color: #fcecec;
            }

                ul.bcms-error-messages li {
                    line-height: 25px;
                    list-style-position: inside;
                    list-style-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAoAAAAJCAYAAAF8oY2FAAAAZElEQVQY02N45uw8DYi/MsAZ////Z0AQQKH/YA6QYYcsuhxD5D8QO0LpTOyCIAtAElBJO5ClIEYmskoUW2ACMDdgqsRlZgtU5Rcg9kZS4A0VA8m1MCBJZEAlkHEG3G6iFRJrNQAfBNhPNe12LwAAAABJRU5ErkJggg==');
                    color: #e64343;
                }

        </style>
        @RenderSection("Head", false)
    </head>
    <body>
        <div class="bcms-page">
            <div class="bcms-header">
                <h1>@ViewBag.Title</h1>
            </div>
            <div class="bcms-messages">
                <ul class="bcms-success-messages" style="display:none;">
                    <li></li>
                </ul>
                <ul class="bcms-error-messages" style="display:none;">
                    <li></li>
                </ul>
            </div>
            <div class="bcms-body">
                @RenderBody()
            </div>            
        </div>
        <div class="bcms-footer"></div>
        @RenderSection("Scripts", true)
    </body>    
</html>